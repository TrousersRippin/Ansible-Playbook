---
services:
  {{ APP }}:
    image: {{ IMAGE_NAME }}:{{ IMAGE_TAG }}
    container_name: {{ APP }}
    hostname: {{ APP }}
    restart: unless-stopped
    security_opt:
      - no-new-privileges:true
    env_file:
      - .env
    command: ["--non-strict-env-handling"]
    user: ${UID}:{{ docker_gid }}
    ports:
      - {{ PORT_NUMBER }}:{{ PORT_NUMBER }}/tcp
    volumes:
      - /home/{{ USER }}/containers/storage/{{ APP }}/config/{{ APP }}.conf:/etc/{{ APP }}/{{ APP }}.conf:ro
      - /var/run/docker.sock:/var/run/docker.sock:ro
      - /proc:/host/proc:ro
      - /sys:/host/sys:ro
      - /etc/localtime:/etc/localtime:ro
    networks:
      - {{ NETWORK }}

networks:
  {{ NETWORK }}:
    external: true