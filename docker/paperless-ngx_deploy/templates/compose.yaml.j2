---
services:
  {{ APP }}:
    image: {{ IMAGE_NAME }}:{{ IMAGE_TAG }}
    container_name: {{ APP }}
    hostname: {{ APP }}
    restart: unless-stopped
    security_opt:
      - no-new-privileges:true
    env_file:
      - .env
    ports:
      - {{ PORT_NUMBER }}:{{ PORT_NUMBER }}/tcp
    volumes:
      - /home/{{ USER }}/containers/storage/{{ APP }}/consume:/usr/src/{{ APP }}/consume:rw
      - /home/{{ USER }}/containers/storage/{{ APP }}/data:/usr/src/{{ APP }}/data:rw
      - /home/{{ USER }}/containers/storage/{{ APP }}/export:/usr/src/{{ APP }}/export:rw
      - /home/{{ USER }}/containers/storage/{{ APP }}/media:/usr/src/{{ APP }}/media:rw
      - /etc/localtime:/etc/localtime:ro
    networks:
      - {{ NETWORK }}

networks:
  {{ NETWORK }}:
    external: true