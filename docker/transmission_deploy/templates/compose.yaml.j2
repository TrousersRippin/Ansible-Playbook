---
services:
  {{ APP }}:
    image: {{ IMAGE_NAME }}:{{ IMAGE_TAG }}
    container_name: {{ APP }}
    hostname: {{ APP }}
    restart: unless-stopped
    security_opt:
      - no-new-privileges:true
    environment:
      - TZ=Europe/Stockholm
      - PUID=1000
      - PGID=1000
    ports:
      - {{ PORT_NUMBER1 }}:{{ PORT_NUMBER1 }}/tcp
      - {{ PORT_NUMBER2 }}:{{ PORT_NUMBER2 }}/tcp
      - {{ PORT_NUMBER2 }}:{{ PORT_NUMBER2 }}/udp
    volumes:
      - /home/{{ USER }}/containers/storage/{{ APP }}/config:/config:rw
      - /home/{{ USER }}/containers/storage/{{ APP }}/config:/watch:rw
      - /etc/localtime:/etc/localtime:ro
    networks:
      - {{ NETWORK }}

networks:
  {{ NETWORK }}:
    external: true