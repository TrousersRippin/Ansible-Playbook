---
services:
  {{ APP }}:
    image: {{ IMAGE_NAME }}:{{ IMAGE_TAG }}
    container_name: {{ APP }}
    hostname: {{ APP }}
    restart: unless-stopped
    security_opt:
      - no-new-privileges:true
    environment:
      - TZ=Europe/Stockholm
      - PUID=1000
      - PGID=1000
    ports:
      - {{ PORT_NUMBER }}:{{ PORT_NUMBER }}/tcp
    volumes:
      - /home/{{ USER }}/containers/storage/{{ APP }}/config/config.production.json:/var/lib/ghost/config.production.json:ro
      - /home/{{ USER }}/containers/storage/{{ APP }}/config:/var/lib/ghost/content:rw
      - /etc/localtime:/etc/localtime:ro
    networks:
      - {{ NETWORK }}

networks:
  {{ NETWORK }}:
    external: true