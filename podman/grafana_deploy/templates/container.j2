[Unit]
Description={{ APP }}
Wants=network-online.target
After=network-online.target local-fs.target

[Container]
ContainerName={{ APP }}
Image={{ IMAGE_NAME }}:{{ IMAGE_TAG }}
AutoUpdate=registry
Timezone=local

HostName={{ APP }}
Network={{ NETWORK }}.network
PublishPort={{ PORT_NUMBER }}:{{ PORT_NUMBER }}/tcp

Volume=%h/containers/storage/{{ APP }}/config/{{ APP }}.ini:/etc/{{ APP }}/{{ APP }}.ini:rw,Z
Volume=%h/containers/storage/{{ APP }}/dashboards:/etc/{{ APP }}/dashboards:ro,Z
Volume=%h/containers/storage/{{ APP }}/provisioning:/etc/{{ APP }}/provisioning:ro,Z
Volume=%h/containers/storage/{{ APP }}/data:/var/lib/{{ APP }}:rw,Z

[Service]
NoNewPrivileges=true
Restart=on-failure
TimeoutStartSec=300
StandardOutput=journal
StandardError=journal

[Install]
WantedBy=multi-user.target default.target